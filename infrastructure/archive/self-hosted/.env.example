# VPN Enterprise Self-Hosted Environment Configuration
# Copy this to .env and customize for your deployment

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
DOMAIN=vpn-enterprise.local
PLATFORM_URL=https://vpn-enterprise.local
API_URL=https://api.vpn-enterprise.local

# ==============================================
# DATABASE CREDENTIALS
# ==============================================
POSTGRES_PASSWORD=generate_secure_password_here_32_chars
REDIS_PASSWORD=generate_secure_redis_password_here

# ==============================================
# OBJECT STORAGE (MinIO)
# ==============================================
MINIO_ROOT_USER=vpn-enterprise-admin
MINIO_ROOT_PASSWORD=generate_secure_minio_password_here

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=generate_super_secure_jwt_secret_64_characters_minimum_here
ENCRYPTION_KEY=generate_32_char_encryption_key

# ==============================================
# MONITORING CREDENTIALS
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=generate_secure_grafana_password

# ==============================================
# VPN CONFIGURATION
# ==============================================
SERVER_URL=your.server.ip.address
WG_PEERS=50

# ==============================================
# SMTP CONFIGURATION (for notifications)
# ==============================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=notifications@vpn-enterprise.local
SMTP_PASSWORD=your_smtp_password

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_S3_BUCKET=vpn-enterprise-backups
BACKUP_S3_ACCESS_KEY=your_backup_access_key
BACKUP_S3_SECRET_KEY=your_backup_secret_key
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ==============================================
# SCALING CONFIGURATION
# ==============================================
API_REPLICAS=2
WORKER_REPLICAS=2
MAX_CONNECTIONS=1000
RATE_LIMIT_REQUESTS=100

# ==============================================
# DEVELOPMENT FLAGS
# ==============================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG_MODE=false

# ==============================================
# SSL CONFIGURATION
# ==============================================
SSL_CERT_PATH=/etc/ssl/certs/vpn-enterprise.crt
SSL_KEY_PATH=/etc/ssl/private/vpn-enterprise.key

# ==============================================
# NOTES
# ==============================================
# 1. Generate secure passwords using: openssl rand -base64 32
# 2. For JWT_SECRET, use: openssl rand -base64 64
# 3. Replace all "generate_*" values with actual secure passwords
# 4. Never commit this file to version control
# 5. Keep backups of this configuration in a secure location