# ==============================================
# VPN ENTERPRISE - DEVELOPMENT CONFIGURATION
# ==============================================
# Non-sensitive environment-specific values for development

# Application Environment
NODE_ENV=development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Service URLs (internal Docker DNS)
API_BASE_URL=http://vpn-api-dev:5000
WEB_BASE_URL=http://vpn-web-dev:3000
PYTHON_API_URL=http://vpn-python-api-dev:5001

# Database Configuration (non-sensitive)
DB_HOST=vpn-postgres-dev
DB_PORT=5432
DB_NAME=platform_db
DB_USER=platform_admin
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_CONNECTION_TIMEOUT=2000

# Redis Configuration (non-sensitive)
REDIS_HOST=vpn-redis-dev
REDIS_PORT=6379
REDIS_DB=0

# N8N Configuration
N8N_HOST=vpn-n8n-dev
N8N_PORT=5678
N8N_PROTOCOL=http
DB_TYPE=sqlite

# Ollama Configuration
OLLAMA_HOST=vpn-ollama-dev
OLLAMA_PORT=11434

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5001,http://localhost:8080

# Feature Flags (Development)
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER_UI=true
ENABLE_PROFILING=true

# Logging
LOG_FORMAT=json
LOG_TIMESTAMPS=true

# Session Configuration
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_MAX_AGE=86400000
