# Dockerfile.dev for NexusAi - Development mode with hot reload
FROM oven/bun:1

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Start dev server
CMD ["bun", "run", "dev", "--host", "0.0.0.0"]
